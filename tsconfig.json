{
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "strict": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "types": ["node", "vite/client"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build"]
}

